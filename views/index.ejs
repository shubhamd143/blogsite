<%- include ('partials/header') %>
    <div class="ui main centered container">
        <div class="ui huge header">RestFul Blog App</div>
        <div class="ui top attached segment">
            <div class="ui divided items">
                <% blogs.forEach(function(blog){ %>
                    <div class="item">
                        <div class="image">
                            <img src=" <%= blog.image %> ">
                        </div>
                        <div class="content">
                            <a class="header" href="/blog/<%= blog._id %>">
                                <%= blog.title %>
                            </a>
                            <div class="meta">
                                <span>
                                    <%= blog.created.toDateString() %>
                                </span>
                            </div>
                            <div class="description">
                                <p>
                                    <%- blog.body.substr(0, 100) %>...
                                </p>
                            </div>
                            <div class="extra">
                                <a class="ui inverted violet button" href="/blog/<%= blog._id %>">Read More</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
    </div>
    <%- include ('partials/footer') %>